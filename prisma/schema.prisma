generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 上にある generator client と datasource db はそのままでOK！
// （datasource db の provider が "postgresql" になっているかだけ確認してね）

// ↓ ここから下を追加コピー ↓

model Todo {
  id        Int      @id @default(autoincrement()) // 自動で1, 2, 3...と番号を振る
  text      String   // タスクの中身
  isDone    Boolean  @default(false) // 完了状態（最初はfalse）
  createdAt DateTime @default(now()) // 作成日時（自動で今の時間が入る）
}